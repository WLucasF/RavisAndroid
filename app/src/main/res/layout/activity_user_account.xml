<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccountActivity"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_acc_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_person_24"
        app:civ_border_color="@color/teal_700"
        app:civ_border_width="2dp" />

    <EditText
        android:id="@+id/set_acc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/set_acc_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/inputs_contacts"
        android:hint="name"
        android:inputType="text"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/set_acc_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_acc_name"
        android:layout_toRightOf="@id/set_acc_image"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/inputs_contacts"
        android:hint="phone number"
        android:inputType="number"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/set_acc_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_acc_phone_num"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/inputs_contacts"
        android:hint="address"
        android:inputType="textPostalAddress"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/set_acc_update_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_acc_address"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:text="update"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold" />

</RelativeLayout>